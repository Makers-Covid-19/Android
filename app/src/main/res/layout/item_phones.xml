<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="fill_parent"
    android:layout_height="105dp"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/shadow_bg"
    android:padding="20dp">

    <ImageView
        android:id="@+id/misreporting"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_incorrect_false" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/phone"
        android:layout_toLeftOf="@+id/phone"
        android:gravity="center|left"
        android:text="Tüm mahalleler"
        android:textColor="@color/textColor"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_toStartOf="@+id/misreporting"
        android:layout_toLeftOf="@+id/misreporting"
        android:gravity="center"
        android:text="0505 806 77 14"
        android:textColor="@color/textColor"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/phone"
        android:layout_toLeftOf="@+id/phone"
        android:gravity="center|left"
        android:lines="2"
        android:text="BELEDİYE"
        android:textColor="@color/textColor"
        android:textSize="16dp"
        android:textStyle="bold" />

</RelativeLayout>
